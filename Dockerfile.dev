# Use Node.js LTS version
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy project files
COPY . .

# Expose port
EXPOSE 6006

# Start Storybook in development mode
CMD ["npm", "run", "storybook", "--", "--host", "0.0.0.0"] 